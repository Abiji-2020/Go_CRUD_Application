{
  "name": "Go Microservice Development Environment",
  "image": "golang:latest",
  "forwardPorts": [
    8080,
    6379
  ],
  "features": {
    "ghcr.io/itsmechlark/features/redis-server:1": {}
  },
  "customizations": {
    "vscode": {
      "settings": {
        "go.formatTool": "goimports",
        "go.lintTool": "golint",
        "go.useLanguageServer": true
      },
      "extensions": [
        "golang.go"
      ]
    }
  },
  "postCreateCommand": "go mod tidy",
  "mounts": [
    "source=/var/lib/redis,target=/data,type=volume"
  ]
}
