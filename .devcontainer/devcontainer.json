{
  "name": "Go Microservice Development Environment",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "forwardPorts": [
    8080,
    6379
  ],
  "customizations": {
    "vscode": {
      "settings": {
        "go.formatTool": "goimports",
        "go.lintTool": "golint",
        "go.useLanguageServer": true
      },
      "extensions": [
        "golang.go"
      ]
    }
  }
}
