{
  "name": "Go Microservice Development Environment",
  "image": "golang:latest",
  "forwardPorts": [
    8080,
    6379
  ],
  "features": {
    "ghcr.io/devcontainers/features/redis:1": {
      "version": "7" // Choose a specific Redis version
    }
  },
  "customizations": {
    "vscode": {
      "settings": {
        "go.formatTool": "goimports",
        "go.lintTool": "golint",
        "go.useLanguageServer": true
      },
      "extensions": [
        "golang.go"
      ]
    }
  },
  "postCreateCommand": "go mod tidy",
  "mounts": [
    {
      "source": "redis-data",
      "target": "/data",
      "type": "volume"
    }
  ]
}
